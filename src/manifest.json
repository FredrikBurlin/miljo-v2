{
  "manifest_version": 3,
  "name": "Miljo",
  "description": "Help you differentiate mulitple Salesforce Orgs",
  "version": "0.0.3.0",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "miljo16.png",
      "32": "miljo32.png",
      "48": "miljo48.png",
      "128": "miljo128.png"
    },
    "default_title": "Milj√∂ Salesforce org settings"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "miljo128.png", "miljo32.png"],
      "matches": []
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": ["https://*.salesforce.com/*", "https://*.force.com/*"],
  "icons": {
    "16": "miljo16.png",
    "32": "miljo32.png",
    "48": "miljo48.png",
    "128": "miljo128.png"
  }
}
